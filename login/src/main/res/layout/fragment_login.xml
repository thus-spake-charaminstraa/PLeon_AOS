<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sub_background_color"
        android:orientation="vertical">
        <TextView
            android:id="@+id/welcome_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="23dp"
            android:paddingBottom="46dp"
            android:paddingHorizontal="30dp"
            style="@style/BubbleBlackText"
            android:text="@string/welcome_fragment_bubble_txt"
            android:background="@drawable/ic_bubble"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/welcome_img"
            android:gravity="center" />
        <ImageView
            android:id="@+id/welcome_img"
            android:layout_width="127dp"
            android:layout_height="235dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/kakao_login_btn"
            android:layout_marginBottom="100dp"
            android:src="@drawable/img_start"/>
