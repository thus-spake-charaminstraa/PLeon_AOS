<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="feed"
            type="com.charaminstra.pleon.common.FeedViewObject" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:onClick="@{clickListener}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:paddingVertical="14dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/bg_plant_detail">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:imgUrl="@{feed.user.thumbnail}"/>
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/FeedUserText"
            app:layout_constraintLeft_toRightOf="@+id/user_image"
            app:layout_constraintTop_toTopOf="@+id/user_image"
            android:text="@{feed.user.nickname}"/>
        <TextView
            android:id="@+id/feed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            style="@style/FeedDateText"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            app:layout_constraintLeft_toLeftOf="@+id/user_name"
            app:layout_constraintBottom_toBottomOf="@+id/user_image"/>
        <ImageView
            android:id="@+id/plant_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,1:1"
            android:scaleType="centerCrop"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/user_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:imgUrl="@{feed.image_url}"/>
        <TextView
            android:id="@+id/feed_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/FeedContentText"
            android:paddingVertical="15dp"
            app:layout_constraintTop_toBottomOf="@+id/plant_image"
            app:layout_constraintLeft_toLeftOf="@id/user_image"
            android:text="@{feed.content}"/>
        <TextView
            android:id="@+id/plant_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FeedTagText"
            android:background="@drawable/tag_bg"
            app:layout_constraintTop_toBottomOf="@+id/feed_content"
            app:layout_constraintLeft_toLeftOf="@id/user_image"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            app:plantTag="@{feed.plant.name}"/>
        <TextView
            android:id="@+id/action_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            style="@style/FeedTagText"
            android:background="@drawable/tag_bg"
            app:layout_constraintLeft_toRightOf="@+id/plant_tag_tv"
            app:layout_constraintTop_toTopOf="@+id/plant_tag_tv"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            app:actionTag="@{feed.kind.resId}"/>
        <ImageView
            android:id="@+id/ic_comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/plant_tag_tv"
            app:layout_constraintLeft_toLeftOf="@+id/user_image"
            android:src="@drawable/ic_btn_feed_comment" />
        <TextView
            android:id="@+id/feed_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            style="@style/FeedContentText"
            app:layout_constraintTop_toTopOf="@+id/ic_comment"
            app:layout_constraintLeft_toRightOf="@+id/ic_comment" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>