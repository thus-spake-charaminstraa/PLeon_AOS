<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingBottom="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/feed_detail_back_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="@+id/feed_doctor_detail_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingVertical="5dp"
        android:scaleType="fitStart"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back" />
    <TextView
        android:id="@+id/feed_doctor_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        style="@style/FeedWriteDateText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <ImageButton
        android:id="@+id/more_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_more"
        android:background="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/feed_doctor_detail_title"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_detail_back_btn"
        app:layout_constraintBottom_toTopOf="@+id/comment_layout"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="29dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                style="@style/FeedUserText"
                app:layout_constraintLeft_toRightOf="@+id/user_image"
                app:layout_constraintTop_toTopOf="@+id/user_image"/>
            <TextView
                android:id="@+id/feed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                style="@style/FeedDateText"
                app:layout_constraintTop_toBottomOf="@+id/user_name"
                app:layout_constraintLeft_toLeftOf="@+id/user_name"
                app:layout_constraintBottom_toBottomOf="@+id/user_image"/>
            <ImageView
                android:id="@+id/plant_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintDimensionRatio="H,1:1"
                android:scaleType="centerCrop"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/user_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/plant_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plant_tag"
                style="@style/FeedTagText"
                android:background="@drawable/tag_bg"
                app:layout_constraintTop_toBottomOf="@+id/feed_content"
                app:layout_constraintLeft_toLeftOf="@id/user_image"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp" />
            <TextView
                android:id="@+id/action_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/action_tag"
                style="@style/FeedTagText"
                android:background="@drawable/tag_bg"
                app:layout_constraintLeft_toRightOf="@+id/plant_tag_tv"
                app:layout_constraintTop_toTopOf="@+id/plant_tag_tv"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp" />
            <TextView
                android:id="@+id/feed_content"
                style="@style/FeedContentText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                app:layout_constraintTop_toBottomOf="@+id/plant_image"
                app:layout_constraintLeft_toLeftOf="@id/user_image" />
            <ImageView
                android:id="@+id/ic_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/plant_tag_tv"
                app:layout_constraintLeft_toLeftOf="@+id/user_image"
                android:src="@drawable/ic_btn_feed_comment" />
            <TextView
                android:id="@+id/feed_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                style="@style/FeedContentText"
                app:layout_constraintTop_toTopOf="@+id/ic_comment"
                app:layout_constraintLeft_toRightOf="@+id/ic_comment" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comments_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="@id/user_image"
                app:layout_constraintTop_toBottomOf="@+id/ic_comment" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/comment_et"
            style="@style/FeedCommentEditText"
            android:gravity="center_vertical"
            android:hint="@string/comment_hint"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/comment_rounded_corner_edittext"
            android:inputType="text"
            android:paddingHorizontal="18dp"
            android:textCursorDrawable="@drawable/cursor_drawable"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/comment_enter_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/comment_enter_btn"
            style="@style/FeedCommentEnterText"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_green_selector"
            android:text="@string/comment_enter_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/comment_et"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
