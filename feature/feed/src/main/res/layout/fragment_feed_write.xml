<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.certified.customprogressindicatorlibrary.CustomProgressIndicator
        android:id="@+id/indicator"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingBottom="60dp">
        <ImageView
            android:id="@+id/feed_write_back_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="@+id/feed_write_date"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingVertical="5dp"
            android:scaleType="fitStart"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back" />
        <TextView
            android:id="@+id/feed_write_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            style="@style/FeedWriteDateText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:id="@+id/complete_btn"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:paddingLeft="15dp"
            android:text="@string/complete_btn"
            style="@style/PlantSubGreenText"
            android:gravity="center_vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/feed_write_date"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sub_background_color"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/feed_write_date"/>
        <ImageView
            android:id="@+id/feed_write_img_add_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="25dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/ic_btn_add_photo"
            android:background="@drawable/bg_camera_btn_selector"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feed_write_date"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/feed_write_img_root"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="36dp"
            app:cardCornerRadius="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feed_write_date">
            <ImageView
                android:id="@+id/feed_write_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/feed_write_img_delete_btn"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:elevation="2dp"
            android:src="@drawable/ic_btn_photo_delete"
            app:layout_constraintStart_toStartOf="@+id/feed_write_img_root"
            app:layout_constraintBottom_toBottomOf="@+id/feed_write_img_root"
            app:layout_constraintCircle="@+id/feed_write_img_root"
            app:layout_constraintCircleRadius="40dp"
            app:layout_constraintCircleAngle="45"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/feed_write_img_add_btn"
            app:layout_constraintBottom_toTopOf="@+id/feed_write_plant_tag_tv">
            <EditText
                android:id="@+id/feed_write_content"
                style="@style/FeedContentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:background="@android:color/transparent"
                android:hint="@string/feed_write_hint"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:scrollbars="vertical"
                android:gravity="top"
                android:textCursorDrawable="@drawable/cursor_drawable"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.core.widget.NestedScrollView>
        <TextView
            android:id="@+id/feed_write_plant_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plant_tag"
            style="@style/FeedTagText"
            android:layout_marginBottom="16dp"
            android:background="@drawable/tag_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp" />
        <TextView
            android:id="@+id/feed_write_action_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/action_tag"
            style="@style/FeedTagText"
            android:background="@drawable/tag_bg"
            app:layout_constraintLeft_toRightOf="@+id/feed_write_plant_tag_tv"
            app:layout_constraintTop_toTopOf="@+id/feed_write_plant_tag_tv"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include android:id="@+id/bottom_sheet" layout="@layout/bottom_sheet_layout" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>