<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="PlantFilterText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/black_sub2_color</item>
    </style>
    <style name="NotiContentStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>
    <style name="FromStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NotiLaterBtn" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#1d9555</item>
    </style>
    <style name="NotiCompleteBtn" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_green_color</item>
    </style>

    <style name="BottomSheetTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_sub_color</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    <style name="BottomSheetActionDesc" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#8d8d97</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    <style name="BottomSheetPlantDesc" parent="@android:style/Widget.TextView">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#8d8d97</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="NotiDateText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_sub_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NotiTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_sub_color</item>
    </style>
    <style name="NotiCommentText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/main_green_color</item>
    </style>
    <style name="NotiPreviewText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
</resources>