<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sub_background_color"
    android:paddingHorizontal="20dp">
    <TextView
        android:id="@+id/doctor_bubble_tv"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingTop="23dp"
        android:paddingBottom="46dp"
        android:paddingHorizontal="30dp"
        style="@style/BubbleBlackText"
        android:text="@string/doctor_fragment_bubble_txt"
        android:background="@drawable/ic_bubble"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/doctor_img"
        android:gravity="center" />
    <ImageView
        android:id="@+id/doctor_img"
        android:layout_width="127dp"
        android:layout_height="235dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/img_doctor"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/doctor_next_btn"
        android:layout_width="250dp"
        android:layout_height="49dp"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/doctor_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_green_selector"
        style="@style/LoginButtonText"
        android:text="@string/doctor_fragment_next_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>