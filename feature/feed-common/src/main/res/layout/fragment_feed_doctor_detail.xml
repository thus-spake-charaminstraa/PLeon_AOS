<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingBottom="60dp">
        <ImageView
            android:id="@+id/feed_detail_back_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="@+id/feed_doctor_detail_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingVertical="5dp"
            android:scaleType="fitStart"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back" />
        <TextView
            android:id="@+id/feed_doctor_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            style="@style/FeedWriteDateText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/feed_detail_back_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="29dp"
                    app:civ_circle_background_color="@color/sub_background_color"
                    android:src="@drawable/img_dr_pleon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/doctor_pleon_name"
                    style="@style/FeedUserText"
                    app:layout_constraintLeft_toRightOf="@+id/user_image"
                    app:layout_constraintTop_toTopOf="@+id/user_image"/>
                <TextView
                    android:id="@+id/feed_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    style="@style/FeedDateText"
                    app:layout_constraintTop_toBottomOf="@+id/user_name"
                    app:layout_constraintLeft_toLeftOf="@+id/user_name"
                    app:layout_constraintBottom_toBottomOf="@+id/user_image"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/feed_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/user_image">
                <!--    symptom-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/symptom_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <TextView
                        android:id="@+id/symptom_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/PrescriptionTitleText"
                        android:text="@string/prescription_symptom_title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/feed_symptom_recyclerview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/symptom_title"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--    prescription-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cause_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/symptom_root">
                    <TextView
                        android:id="@+id/cause_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/PrescriptionTitleText"
                        android:text="@string/prescription_cause_title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/feed_cause_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/cause_title"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--    solution -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/solution_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/cause_root">
                    <TextView
                        android:id="@+id/solution_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/PrescriptionTitleText"
                        android:text="@string/prescription_solution_title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/feed_solution_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/solution_title"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/plant_tag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/plant_tag"
                    style="@style/FeedTagText"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/tag_bg"
                    app:layout_constraintTop_toBottomOf="@+id/feed_content"
                    app:layout_constraintLeft_toLeftOf="@id/user_image"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp" />
                <TextView
                    android:id="@+id/action_tag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/doctor_action_tag"
                    style="@style/FeedTagText"
                    android:background="@drawable/tag_bg"
                    app:layout_constraintLeft_toRightOf="@+id/plant_tag_tv"
                    app:layout_constraintTop_toTopOf="@+id/plant_tag_tv"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>