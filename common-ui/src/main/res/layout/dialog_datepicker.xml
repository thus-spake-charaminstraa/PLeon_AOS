<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="312dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <NumberPicker
        android:id="@+id/year_datepicker"
        android:layout_width="63dp"
        android:layout_height="124dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dialog_button"
        android:theme="@style/AppTheme.NumberPicker"/>
    <NumberPicker
        android:id="@+id/month_datepicker"
        android:layout_width="63dp"
        android:layout_height="124dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toEndOf="@+id/year_datepicker"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/AppTheme.NumberPicker"/>
    <NumberPicker
        android:id="@+id/day_datepicker"
        android:layout_width="63dp"
        android:layout_height="124dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toEndOf="@+id/month_datepicker"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/AppTheme.NumberPicker"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        app:layout_constraintBottom_toTopOf="@+id/dialog_button" />
    <LinearLayout
        android:id="@+id/dialog_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:background="@null"
            style="@style/DialogButtonCancelText"
            android:text="@string/dialog_cancel_btn"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            app:layout_constraintBottom_toTopOf="@+id/dialog_button" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ok_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            style="@style/DialogButtonOkText"
            android:text="@string/dialog_ok_btn"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>