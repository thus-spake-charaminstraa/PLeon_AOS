<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:maxWidth="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/image_menu_root"
    android:background="@drawable/dialog_bg">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/camera_btn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:paddingVertical="15dp"
        android:background="@drawable/dialog_btn_left_round_selector"
        android:drawableTop="@drawable/ic_camera"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="camera"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/gallery_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gallery_btn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:paddingVertical="15dp"
        android:background="@drawable/dialog_btn_right_round_selector"
        android:drawableTop="@drawable/ic_gallery"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="gallery"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/camera_btn"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>