    <style name="LoginButtonText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="LoginHelpText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/help_color</item>
    </style>
    <style name="CodeErrorText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/error_text_color</item>
    </style>



    <style name="TitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SubText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FeedWriteText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="FeedWriteEditText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="CalendarLabelText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="FeedDateText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="SearchText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="hello" parent="@android:style/Widget.TextView">
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PleonDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#FFFFFF</item>
        <!--selected Item color-->
        <item name="colorControlActivated">#2196F3</item>
        <!-- arrow bordercolor(<>)-->
        <item name="android:selectableItemBackgroundBorderless">@color/white</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">#d50000</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/black</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/black</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">#000000</item>
    </style>
</resources>