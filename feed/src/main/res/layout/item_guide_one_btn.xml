<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@drawable/bg_guide"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="128dp"
        android:layout_height="143dp"
        android:src="@drawable/img_logo"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/noti_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            style="@style/NotiContentStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/pleon_tv"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            style="@style/FromStyle"
            android:text="@string/from_pleon"
            app:layout_constraintTop_toBottomOf="@+id/noti_tv"
            app:layout_constraintLeft_toLeftOf="@+id/noti_tv"/>
        <TextView
            android:id="@+id/noti_go_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="7dp"
            android:background="@drawable/noti_complete_selector"
            style="@style/NotiCompleteBtn"
            android:text="@string/noti_go_btn"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/pleon_tv"
            app:layout_constraintLeft_toLeftOf="@+id/noti_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>