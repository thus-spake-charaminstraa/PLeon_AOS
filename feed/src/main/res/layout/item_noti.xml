<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/bg_noti"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="128dp"
        android:layout_height="143dp"
        android:src="@drawable/img_logo"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/noti_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="65dp"
        style="@style/SubText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/noti_later_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="7dp"
        android:background="@drawable/bg_noti_later"
        style="@style/SubText"
        android:text="@string/noti_later_btn"
        app:layout_constraintTop_toBottomOf="@+id/noti_tv"
        app:layout_constraintLeft_toLeftOf="@+id/noti_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/noti_complete_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        style="@style/SubText"
        android:layout_marginLeft="7dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="7dp"
        android:background="@drawable/bg_noti_complete"
        android:text="@string/noti_complete_btn"
        app:layout_constraintLeft_toRightOf="@+id/noti_later_btn"
        app:layout_constraintTop_toTopOf="@+id/noti_later_btn"
        app:layout_constraintBottom_toBottomOf="@+id/noti_later_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>