<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_feed"
    app:startDestination="@id/feed_fragment">
    <fragment
        android:id="@+id/feed_fragment"
        android:name="com.charaminstra.pleon.feed.FeedFragment"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/feed_fragment_to_feed_write_fragment"
            app:destination="@id/feed_write_fragment"/>
        <action
            android:id="@+id/feed_fragment_to_feed_detail_fragment"
            app:destination="@id/feed_detail_fragment"/>
    </fragment>
    <fragment
        android:id="@+id/feed_write_fragment"
        android:name="com.charaminstra.pleon.feed.FeedWriteFragment"
        tools:layout="@layout/fragment_feed_write">
    </fragment>
    <fragment
        android:id="@+id/feed_detail_fragment"
        android:name="com.charaminstra.pleon.feed_common.FeedDetailFragment"
        tools:layout="@layout/fragment_feed_detail">
    </fragment>
</navigation>