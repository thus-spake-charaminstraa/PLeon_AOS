<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        app:civ_border_color="@color/input_bg"
        app:civ_border_width="2dp"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/input_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유랄라"
        style="@style/SubText"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/user_image"
        app:layout_constraintTop_toTopOf="@+id/user_image"/>
    <TextView
        android:id="@+id/feed_date"
        style="@style/FeedDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintLeft_toLeftOf="@+id/user_name"
        app:layout_constraintBottom_toBottomOf="@+id/user_image"/>
    <ImageButton
        android:id="@+id/more_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_more"
        android:background="@color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/plant_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        android:scaleType="centerCrop"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/user_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/plant_tag_tv"
        style="@style/SubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/plant_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="top"
        android:padding="3dp" />
    <TextView
        android:id="@+id/action_tag_tv"
        style="@style/SubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:padding="3dp"
        app:layout_constraintLeft_toRightOf="@+id/plant_tag_tv"
        app:layout_constraintTop_toTopOf="@+id/plant_tag_tv" />
    <TextView
        android:id="@+id/feed_content"
        style="@style/SubText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        app:layout_constraintTop_toBottomOf="@+id/plant_tag_tv"
        app:layout_constraintLeft_toLeftOf="parent" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_user_image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        app:civ_border_color="@color/input_bg"
        app:civ_border_width="2dp"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/input_bg"
        app:layout_constraintTop_toBottomOf="@+id/feed_content"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/comment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식물"
        style="@style/SubText"
        android:layout_marginLeft="3dp"
        app:layout_constraintLeft_toRightOf="@+id/comment_user_image"
        app:layout_constraintTop_toTopOf="@+id/comment_user_image"
        app:layout_constraintBottom_toBottomOf="@+id/comment_user_image"/>
    <TextView
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요~~~"
        style="@style/SubText"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/comment_user_name"
        app:layout_constraintTop_toTopOf="@+id/comment_user_image"
        app:layout_constraintBottom_toBottomOf="@+id/comment_user_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>