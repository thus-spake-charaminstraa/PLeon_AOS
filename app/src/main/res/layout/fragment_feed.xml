<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FeedFragment">
    <HorizontalScrollView
        android:id="@+id/filter_scroll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/all_filter"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/round_shape"
                android:backgroundTint="@color/input_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/feed_all_filter"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/leon_filter"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:gravity="center"
                app:civ_border_color="@color/input_bg"
                app:civ_border_width="2dp"
                android:background="@drawable/round_shape"
                android:src="@drawable/logo_img"
                app:layout_constraintLeft_toRightOf="@id/all_filter"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/feed_all_filter"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/feed_filter_recyclerview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/leon_filter"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/input_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_scroll"
        app:layout_constraintBottom_toTopOf="@id/feed_scroll"/>
    <ScrollView
        android:id="@+id/feed_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_scroll" >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/feed_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/all_filter" />
    </ScrollView>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/write_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_pencil"
        android:layout_margin="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>