<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/noti_rounded_corner"
    android:layout_margin="5dp"
    android:padding="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pleon_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:civ_border_color="@color/input_bg"
        app:civ_border_width="2dp"
        android:src="@drawable/logo_img"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/input_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/pleon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        style="@style/SubText"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/pleon_image"
        app:layout_constraintTop_toTopOf="@+id/pleon_image"
        app:layout_constraintBottom_toBottomOf="@+id/pleon_image"/>
    <TextView
        android:id="@+id/noti_tv"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        style="@style/SubText"
        app:layout_constraintTop_toBottomOf="@id/pleon_image"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/noti_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/later_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/noti_rounded_corner"
            style="@style/SubText"
            android:backgroundTint="@color/white"
            android:text="@string/noti_later_btn"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/complete_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            style="@style/SubText"
            android:backgroundTint="@color/main_color"
            android:background="@drawable/noti_rounded_corner"
            android:text="@string/noti_complete_btn"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>