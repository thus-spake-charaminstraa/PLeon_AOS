<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:navGraph="@navigation/nav_garden"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/garden_fragment_title"
        android:layout_marginTop="65dp"
        android:layout_marginHorizontal="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/MainTitleText"
        android:text="@string/garden_fragment_title"/>
    <View
        android:id="@+id/garden_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_garden"
        android:layout_marginTop="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garden_fragment_title">
    </View>

<!--    <androidx.appcompat.widget.AppCompatButton-->
<!--        android:id="@+id/no_plant_button"-->
<!--        android:text="@string/no_plant_msg"-->
<!--        android:layout_margin="2dp"-->
<!--        android:layout_width="200dp"-->
<!--        android:visibility="gone"-->
<!--        android:background="@drawable/noti_complete_button_selector"-->
<!--        android:layout_height="wrap_content"-->
<!--        style="@style/FeedWriteText"-->
