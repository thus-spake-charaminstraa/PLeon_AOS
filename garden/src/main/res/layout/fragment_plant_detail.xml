<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_background_color"
    android:paddingHorizontal="20dp"
    android:paddingTop="25dp"
    android:paddingBottom="70dp">
    <ImageView
        android:id="@+id/plant_detail_back_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="@+id/plant_detail_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingVertical="5dp"
        android:scaleType="fitStart"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back" />
    <TextView
        android:id="@+id/plant_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plant_detail_back_btn"
        android:text="@string/plant_edit_title"
        style="@style/MainTitleText"/>
    <TextView
        android:id="@+id/plant_detail_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:paddingLeft="15dp"
        android:text="@string/edit_btn"
        style="@style/PlantEditBtnText"
        android:gravity="center_vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plant_detail_title"/>
    <ScrollView
        android:id="@+id/plant_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_detail_title"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/plant_detail_scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/plant_detail_info_bg">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/plant_detail_info_bg"
                android:background="@drawable/bg_plant_detail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:paddingHorizontal="20dp">
                <ImageView
                    android:id="@+id/plant_detail_image"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/plant_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="@+id/plant_detail_image"
                    app:layout_constraintBottom_toTopOf="@+id/plant_detail_species"
                    app:layout_constraintLeft_toRightOf="@+id/plant_detail_image"
                    android:text="자민이"
                    style="@style/TitleText"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_mood"
                    app:layout_constraintTop_toTopOf="@+id/plant_detail_name"
                    app:layout_constraintBottom_toBottomOf="@id/plant_detail_name"
                    app:layout_constraintRight_toRightOf="parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_happy"/>
                    <TextView
                        android:id="@+id/mood_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        style="@style/MoodText"
                        android:text="Happy"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/plant_detail_species"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="@id/plant_detail_name"
                    app:layout_constraintLeft_toRightOf="@id/plant_detail_image"
                    app:layout_constraintTop_toBottomOf="@+id/plant_detail_name"
                    app:layout_constraintBottom_toTopOf="@+id/plant_detail_dday"
                    android:text="벤자민"
                    style="@style/PlantSubText"/>
                <View
                    android:id="@+id/line"
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:background="@color/black_sub2_color"
                    app:layout_constraintTop_toTopOf="@+id/plant_detail_species"
                    app:layout_constraintBottom_toBottomOf="@+id/plant_detail_species"
                    app:layout_constraintLeft_toRightOf="@+id/plant_detail_species"
                    app:layout_constraintRight_toLeftOf="@+id/plant_detail_adopt_day"/>
                <TextView
                    android:id="@+id/plant_detail_adopt_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintTop_toTopOf="@+id/plant_detail_species"
                    app:layout_constraintBottom_toBottomOf="@+id/plant_detail_species"
                    app:layout_constraintLeft_toRightOf="@+id/plant_detail_species"
                    android:text="2022.01.12 입양"
                    style="@style/PlantSubText"/>
                <TextView
                    android:id="@+id/plant_detail_dday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/plant_detail_fragment_d_day"
                    app:layout_constraintLeft_toLeftOf="@id/plant_detail_species"
                    app:layout_constraintTop_toBottomOf="@+id/plant_detail_species"
                    app:layout_constraintBottom_toBottomOf="@+id/plant_detail_image"
                    android:textColor="@color/main_green_color"
                    style="@style/PlantSubText"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:layout_constraintTop_toTopOf="@+id/plant_detail_dday"
                    app:layout_constraintLeft_toRightOf="@+id/plant_detail_dday"
                    app:layout_constraintBottom_toBottomOf="@id/plant_detail_dday"
                    android:src="@drawable/ic_heart"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/plant_detail_calendar_bg"
                android:background="@drawable/bg_plant_detail"
                app:layout_constraintTop_toBottomOf="@+id/plant_detail_info_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingVertical="20dp">
                <ImageView
                    android:id="@+id/calendar_month_prev_btn"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:padding="5dp"
                    app:layout_constraintRight_toLeftOf="@+id/calendar_month"
                    app:layout_constraintTop_toTopOf="@+id/calendar_month"
                    app:layout_constraintBottom_toBottomOf="@+id/calendar_month"
                    android:src="@drawable/ic_btn_calendar_prev" />
                <TextView
                    android:id="@+id/calendar_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/CalendarMonthText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:id="@+id/calendar_month_next_btn"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:padding="5dp"
                    app:layout_constraintLeft_toRightOf="@+id/calendar_month"
                    app:layout_constraintTop_toTopOf="@+id/calendar_month"
                    app:layout_constraintBottom_toBottomOf="@+id/calendar_month"
                    android:src="@drawable/ic_btn_calendar_next" />
                <com.kizitonwose.calendarview.CalendarView
                    android:id="@+id/calendar_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    app:cv_dayViewResource="@layout/calendar_day_layout"
                    app:layout_constraintTop_toBottomOf="@+id/calendar_month"
                    app:cv_monthHeaderResource="@layout/calendar_header"
                    app:cv_orientation="horizontal"
                    app:cv_outDateStyle="endOfGrid"
                    app:cv_scrollMode="paged"/>
                <LinearLayout
                    android:id="@+id/action_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_action_label"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintRight_toRightOf="@+id/calendar_view"
                    app:layout_constraintLeft_toLeftOf="@+id/calendar_view"
                    app:layout_constraintTop_toBottomOf="@+id/calendar_view">
                    <ImageView
                        android:id="@+id/dot1"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_dot_water" />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="@string/dot_water"
                        style="@style/CalendarLabelText"/>
                    <ImageView
                        android:id="@+id/dot2"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_dot_air" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/dot_air"
                        style="@style/CalendarLabelText"/>
                    <ImageView
                        android:id="@+id/dot3"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_dot_spray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/dot_spray"
                        style="@style/CalendarLabelText"/>
                    <ImageView
                        android:id="@+id/dot4"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_dot_prune" />
                    <TextView
                        android:layout_width="50dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/dot_prune"
                        style="@style/CalendarLabelText"/>
                    <ImageView
                        android:id="@+id/dot5"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_dot_fertilize" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/dot_fertillize"
                        style="@style/CalendarLabelText"/>
                    <ImageView
                        android:id="@+id/dot6"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_margin="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_dot_repot" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/dot_repot"
                        style="@style/CalendarLabelText"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/feed_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/plant_detail_calendar_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout >

