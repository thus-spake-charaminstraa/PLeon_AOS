<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="DoctorChooseText" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black_sub_color</item>
    </style>
    <style name="CameraHelpText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PrescriptionPersonTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_sub2_color</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="PrescriptionPersonNameText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_sub_color</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="PrescriptionTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_sub_color</item>
        <item name="android:lineSpacingExtra">14sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="PrescriptionSymptomDescText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black_sub_color</item>
        <item name="android:lineSpacingExtra">15sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="PrescriptionCauseNumText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/error_text_color</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    <style name="PrescriptionSolutionNumText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/main_green_color</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
</resources>