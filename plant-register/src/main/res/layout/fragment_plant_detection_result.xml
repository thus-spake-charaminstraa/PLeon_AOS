<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/plant_detection_result_ok_btn"
        android:paddingVertical="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/plant_detection_result_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:src = "@drawable/img_logo"/>
            <TextView
                android:id="@+id/plant_detection_result_percent"
                style="@style/ModelWaitingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/plant_detection_result_img"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                tools:text="99% 확률로"/>
            <TextView
                android:id="@+id/plant_detection_result_label"
                style="@style/ModelResultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/plant_detection_result_percent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                tools:text="로즈마리 입니다." />
            <TextView
                android:id="@+id/plant_detection_result_difficulty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PlantDetectionTitleText"
                android:layout_marginTop="35dp"
                android:text="@string/plant_detection_difficulty_title"
                app:layout_constraintTop_toBottomOf="@+id/plant_detection_result_label"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <LinearLayout
                android:id="@+id/plant_detection_result_difficulty_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/plant_detection_result_difficulty_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/plant_detection_result_difficulty_easy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/PlantDetectionSubText"
                    android:paddingVertical="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_difficulty_off"
                    android:text="@string/plant_detection_easy"/>
                <TextView
                    android:id="@+id/plant_detection_result_difficulty_normal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    style="@style/PlantDetectionSubText"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_difficulty_off"
                    android:layout_marginHorizontal="18dp"
                    android:text="@string/plant_detection_normal"/>
                <TextView
                    android:id="@+id/plant_detection_result_difficulty_hard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    style="@style/PlantDetectionSubText"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_difficulty_off"
                    android:text="@string/plant_detection_hard"/>
            </LinearLayout>
            <TextView
                android:id="@+id/plant_detection_result_benefit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PlantDetectionTitleText"
                android:layout_marginTop="25dp"
                android:text="@string/plant_detection_benefit_title"
                app:layout_constraintTop_toBottomOf="@+id/plant_detection_result_difficulty_desc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/plant_detection_result_benefit_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/PlantDetectionSubText"
                android:gravity="center"
                android:padding="20dp"
                tools:text="포름알데히드·자일렌 제거,  음이온 발생,
상대습도 증가"
                android:background="@drawable/bg_border"
                app:layout_constraintTop_toBottomOf="@+id/plant_detection_result_benefit_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/plant_detection_result_tip_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PlantDetectionTitleText"
                android:layout_marginTop="25dp"
                android:text="@string/plant_detection_tip_title"
                app:layout_constraintTop_toBottomOf="@+id/plant_detection_result_benefit_desc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/plant_detection_result_tip_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/PlantDetectionSubText"
                android:background="@drawable/bg_border"
                android:gravity="center"
                android:padding="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/plant_detection_result_tip_title"
                tools:text="백량금은 포름알데히드와 일산화탄소 제거능력이
우수하여 거실에 배치하면 좋다.
어느 광 도에도 잘 자라지만 햇빛을 좋아하는 편이라
창가나 밝은 곳에 두면 열매가 많이 열린다." />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plant_detection_result_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_green_selector"
        style="@style/LoginButtonText"
        android:text="@string/complete_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>