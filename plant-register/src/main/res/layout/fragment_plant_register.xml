<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:orientation="vertical"
    android:paddingTop="44dp"
    tools:context="com.charaminstra.pleon.plant_register.ui.PlantRegisterFragment">
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/back_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:scaleType="center"
        android:src="@drawable/ic_arrow_back" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_btn"
        style="@style/TitleText"
        android:text="@string/plant_register_fragment_title"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/plant_card"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_potted_plant"
            android:background="@drawable/image_button_selector"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/species_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_card"
        style="@style/SubText"
        android:text="@string/species_title"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/species_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_margin="2dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/species_title"
        android:drawableRight="@drawable/ic_search">
    </androidx.appcompat.widget.AppCompatButton>
    <TextView
        android:id="@+id/name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/species_btn"
        style="@style/SubText"
        android:text="@string/name_title"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="2dp"
        android:inputType="textCapCharacters"
        android:background="@drawable/input"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:padding="15dp"
        style="@style/SubText"
        android:hint="@string/name_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_title"/>

    <TextView
        android:id="@+id/adopt_day_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        style="@style/SubText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_input"
        android:text="@string/adopt_day_title"/>
    <TextView
        android:id="@+id/adopt_day_input"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="2dp"
        android:background="@drawable/input"
        android:padding="15dp"
        style="@style/SubText"
        android:hint="@string/adopt_day_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adopt_day_title"/>
    <TextView
        android:id="@+id/water_day_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        style="@style/SubText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adopt_day_input"
        android:text="@string/water_day_title"/>
    <TextView
        android:id="@+id/water_day_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="5dp"
        android:inputType="textCapCharacters"
        android:background="@drawable/input"
        android:padding="15dp"
        style="@style/SubText"
        android:hint="@string/water_day_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/water_day_title"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/water_day_input"
        android:background="@drawable/button_active"
        style="@style/SubText"
        android:text="@string/next_btn" />
    <TextView
        android:id="@+id/skip_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginHorizontal="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_btn"
        style="@style/SubText"
        android:visibility="gone"
        android:text="@string/skip_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>