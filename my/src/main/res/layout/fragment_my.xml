<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingBottom="65dp">
    <TextView
        android:id="@+id/my_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/my_fragment_title"
        style="@style/MainTitleText"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_inactive"
        android:backgroundTint="@color/blank_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_title" />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_img"
        android:layout_marginTop="11dp"
        style="@style/UserNameText"/>
    <TextView
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_edit_btn"
        style="@style/EditBtnText"
        android:layout_marginTop="11dp"
        android:background="@drawable/bg_edit_btn"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name"/>
    <TextView
        android:id="@+id/comment_switch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        style="@style/ToggleText"
        android:text="@string/toggle_comment"
        app:layout_constraintTop_toBottomOf="@+id/edit_btn"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ToggleButton
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:textOff=""
        android:textOn=""
        android:background="@drawable/selector_toggle"
        app:layout_constraintTop_toTopOf="@+id/comment_switch_title"
        app:layout_constraintBottom_toBottomOf="@+id/comment_switch_title"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/guide_switch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        style="@style/ToggleText"
        android:text="@string/toggle_guide"
        app:layout_constraintTop_toBottomOf="@+id/comment_switch_title"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ToggleButton
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:textOff=""
        android:textOn=""
        android:background="@drawable/selector_toggle"
        app:layout_constraintTop_toTopOf="@+id/guide_switch_title"
        app:layout_constraintBottom_toBottomOf="@+id/guide_switch_title"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:paddingHorizontal="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@null"
        style="@style/EditBtnText"
        android:text="@string/logout_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>